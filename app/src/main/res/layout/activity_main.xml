<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    tools:context="in.apps.maitreya.travelalarm.MainActivity">

    <Button
        android:id="@+id/map_source"
        android:text="@string/map_source"
        android:layout_width="wrap_content"
        android:onClick="mapS"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"

        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/map_destination"
        android:layout_marginStart="53dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map_destination"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2" />


    <Button
        android:text="@string/stopBLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopBLS"
        android:id="@+id/stop_BLS"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/start_BLS"
        android:layout_marginBottom="28dp" />

    <Button
        android:text="@string/startBLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startBLS"
        android:id="@+id/start_BLS"
        android:layout_above="@+id/stop_BLS"
        android:layout_alignStart="@+id/setAlarmDis" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/setAlarmDis"
        android:layout_alignBottom="@+id/setAlarmDis"
        android:layout_toEndOf="@+id/calc_ETA" />

    <Button
        android:id="@+id/map_destination"
        android:text="@string/map_destination"
        android:layout_width="wrap_content"
        android:onClick="mapD"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_source"
        android:layout_alignStart="@+id/map_source"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/calc_ETA"
        android:layout_alignBottom="@+id/calc_ETA"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:text="Set Alarm Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAlarmDis"
        android:onClick="setAlarmDistance"
        android:layout_below="@+id/calc_ETA"
        android:layout_alignStart="@+id/calc_ETA"
        android:layout_marginTop="10dp" />

    <Button
        android:text="@string/calculate_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calDis"
        android:id="@+id/calc_ETA"
        android:layout_below="@+id/map_destination"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginTop="50dp" />

</RelativeLayout>
