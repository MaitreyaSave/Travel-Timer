<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    tools:context="com.example.maitreya.traveltimer.MainActivity">

    <Button
        android:id="@+id/map_source"
        android:text="@string/map_source"
        android:layout_width="wrap_content"
        android:onClick="mapS"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/map_destination"
        android:text="@string/map_destination"
        android:layout_width="wrap_content"
        android:onClick="mapD"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_source"
        android:layout_alignStart="@+id/map_source" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/map_destination"
        android:layout_marginStart="53dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map_destination"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2" />

    <Button
        android:text="@string/calculate_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:onClick="calDis"
        android:id="@+id/calc_ETA"
        android:layout_below="@+id/map_destination"
        android:layout_alignStart="@+id/map_destination"
        android:layout_alignEnd="@+id/map_destination" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/calc_ETA"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:text="Set Alarm Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/calc_ETA"
        android:layout_alignStart="@+id/ring"
        android:onClick="setAlarmDistance"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ring"
        android:onClick="ringButton"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/calc_ETA"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginStart="13dp"
        android:id="@+id/textView4" />

</RelativeLayout>
